<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <TextView
        android:layout_marginTop="@dimen/y100"
        android:paddingEnd="@dimen/x70"
        android:layout_marginStart="@dimen/dp_30"
        android:textSize="@dimen/sp_38"
        android:textColor="@color/ffst_btn"
        android:text="欢迎用户 13813813800，进入投递界面。"
        android:id="@+id/control_welcome_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:layout_below="@+id/control_welcome_textView"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        android:text="联系管理员：13613613602"
        android:id="@+id/control_alert_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextureView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/control_alert_textView"
        android:id="@+id/textTueView"
        android:layout_width="265dp"
        android:layout_height="200dp"/>
    <!--用来自拍的相机-->
    <FrameLayout
        android:layout_below="@+id/control_alert_textView"
        android:id="@+id/control_camera_preview"
        android:layout_centerInParent="true"
        android:layout_width="265dp"
        android:layout_height="200dp"/>
    <ImageView
        android:id="@+id/control_image"
        android:layout_below="@+id/control_alert_textView"
        android:background="#FFFFFF"
        android:src="@mipmap/wenzi"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_centerHorizontal="true"
        android:padding="@dimen/x50"
        android:id="@+id/dustbin_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_image"
        android:layout_marginTop="0dp"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/resgit_face_btn"
            android:onClick="onControl"
            android:text="人脸注册"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_radius_green_left_top_13"
            android:textColor="@color/white"
            android:layout_height="@dimen/y120"/>
        <TextView
            android:id="@+id/control_exit_btn"
            android:onClick="onControl"
            android:text="退出"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/shape_radius_blue_right_top_13"
            android:layout_height="@dimen/y120"/>
    </LinearLayout>

</RelativeLayout>